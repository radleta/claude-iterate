{
  "name": "claude-iterate",
  "version": "2.2.0",
  "description": "Task iteration system with Claude Code - workspace management, templates, and autonomous execution",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "claude-iterate": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-package-files",
    "postbuild": "chmod +x dist/index.js",
    "prepare": "husky && npm run build",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:smoke": "./tests/smoke-test.sh",
    "test:smoke:verify": "./tests/smoke-test-verification.sh",
    "test:smoke:verbose": "./tests/smoke-test-verbose-mode.sh",
    "test:smoke:all": "./tests/smoke-test.sh && ./tests/smoke-test-verification.sh && ./tests/smoke-test-verbose-mode.sh",
    "test:cleanup": "vitest run tests/unit/claude-client.test.ts tests/integration/process-cleanup.test.ts",
    "test:quick": "vitest run tests/unit/claude-client.test.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "copy-package-files": "node ./scripts/copy-files.js",
    "validate": "npm run lint && npm run typecheck && npm test",
    "pack:dry": "npm pack --dry-run",
    "size:check": "npm pack --dry-run 2>&1 | grep 'package size' | head -1",
    "release": "npm run pack:dry && npm run size:check && echo 'Ready for release. Run: npm version [patch|minor|major]'",
    "version": "node scripts/update-changelog.js $npm_package_version && git add CHANGELOG.md",
    "prepublishOnly": "npm run validate && npm run build",
    "clean:scratch": "rm -r ./scratch/*",
    "clean:workspaces": "rm -r ./claude-iterate/workspaces/*"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "llm",
    "cli",
    "automation",
    "task-management",
    "workflow",
    "workspace",
    "templates",
    "iteration",
    "devtools",
    "productivity",
    "agent",
    "autonomous"
  ],
  "homepage": "https://github.com/radleta/claude-iterate#readme",
  "bugs": {
    "url": "https://github.com/radleta/claude-iterate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radleta/claude-iterate.git"
  },
  "author": {
    "name": "Richard Adleta",
    "email": "radleta@gmail.com",
    "url": "https://github.com/radleta"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "ndjson": "^2.0.0",
    "tar": "^7.5.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/ndjson": "^2.0.4",
    "@types/node": "^22.10.5",
    "@types/tar": "^6.1.13",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.4.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
