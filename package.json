{
  "name": "claude-iterate",
  "version": "1.0.0",
  "description": "Task iteration system with Claude Code - workspace management, templates, and autonomous execution",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "claude-iterate": "./dist/src/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-package-files",
    "postbuild": "chmod +x dist/src/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:smoke": "./tests/smoke-test.sh",
    "test:cleanup": "vitest run tests/unit/claude-client.test.ts tests/integration/process-cleanup.test.ts",
    "test:quick": "vitest run tests/unit/claude-client.test.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "copy-package-files": "node ./scripts/copy-files.js",
    "validate": "npm run lint && npm run typecheck && npm test",
    "pack:dry": "npm pack --dry-run",
    "size:check": "npm pack --dry-run 2>&1 | grep 'package size' | head -1",
    "release": "npm run pack:dry && npm run size:check && echo 'Ready for release. Run: npm version [patch|minor|major]'",
    "version": "node scripts/update-changelog.js $npm_package_version && git add CHANGELOG.md",
    "prepublishOnly": "npm run validate && npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "llm",
    "cli",
    "automation",
    "task-management",
    "workflow",
    "workspace",
    "templates",
    "iteration",
    "devtools",
    "productivity",
    "agent",
    "autonomous"
  ],
  "homepage": "https://github.com/radleta/claude-iterate#readme",
  "bugs": {
    "url": "https://github.com/radleta/claude-iterate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radleta/claude-iterate.git"
  },
  "author": {
    "name": "Richard Adleta",
    "email": "radleta@gmail.com",
    "url": "https://github.com/radleta"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
